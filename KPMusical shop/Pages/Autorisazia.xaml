<Page x:Class="KPMusical_shop.Pages.Autorisazia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KPMusical_shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autorisazia">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин"/>
                <TextBox Name="Login"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль"/>
                <PasswordBox Name="Password"/>
            </StackPanel>
            <Label Content="Зарегестрироваться" Name="Regestrazia" MouseDoubleClick="Regestrazia_MouseDoubleClick"/>
            <Button Content="Аторизация" Name="Autorisaziya" Click="Autorisaziya_Click"/>
        </StackPanel>
    </Grid>
</Page>
